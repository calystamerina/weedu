<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <FrameLayout
                android:id="@+id/bg_has_background"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/bg_gelombang" />

            <FrameLayout
                android:id="@+id/bg_plain"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@id/bg_has_background" />

            <com.telkom.weedu.view.custom.CircleImageView
                android:id="@+id/img_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:src="@drawable/edumail_default_avatar" />

            <TextView
                android:id="@+id/tv_account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_avatar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="@string/sample_name"
                android:textColor="@color/textBlack"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_email"
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_account_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="@string/sample_email"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/label_balance"
                        android:textColor="@color/textBlack"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_account_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="IDR 0" />

                </LinearLayout>

                <View style="@style/horizontalDividerGray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/label_point"
                        android:textColor="@color/textBlack"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_account_point"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/sample_point" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <LinearLayout
                android:id="@+id/btn_edit_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_account_edit"
                        android:drawablePadding="22dp"
                        android:drawableStart="@drawable/ic_account_edit"
                        android:text="@string/menu_edit_account"
                        android:textColor="@color/textBlack"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/arah_kanan" />

                </LinearLayout>

                <View
                    style="@style/horizontalDividerGray"
                    android:layout_marginLeft="39dp"
                    android:layout_marginTop="12dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_account_change_password"
                        android:drawablePadding="16dp"
                        android:drawableStart="@drawable/ic_account_change_password"
                        android:text="@string/menu_change_password"
                        android:textColor="@color/textBlack"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/arah_kanan" />

                </LinearLayout>

                <View
                    style="@style/horizontalDividerGray"
                    android:layout_marginLeft="39dp"
                    android:layout_marginTop="12dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_topup_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_account_topup"
                        android:drawablePadding="16dp"
                        android:drawableStart="@drawable/ic_account_topup"
                        android:text="@string/menu_topup_balance"
                        android:textColor="@color/textBlack"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/arah_kanan" />

                </LinearLayout>

                <View
                    style="@style/horizontalDividerGray"
                    android:layout_marginLeft="39dp"
                    android:layout_marginTop="12dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_redeem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_account_point"
                        android:drawablePadding="13dp"
                        android:drawableStart="@drawable/ic_account_point"
                        android:gravity="center_vertical"
                        android:text="@string/menu_redeem"
                        android:textColor="@color/textBlack"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/arah_kanan" />

                </LinearLayout>

                <View
                    style="@style/horizontalDividerGray"
                    android:layout_marginLeft="39dp"
                    android:layout_marginTop="12dp" />
            </LinearLayout>


        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="16dp"
            android:background="@color/white">

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="?attr/selectableItemBackground"
                android:text="@string/btn_logout"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_red_light"
                android:textStyle="bold" />
        </FrameLayout>


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
