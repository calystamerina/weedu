<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/colorWhite"
    tools:context="com.telkom.weedu.view.emailconfirmation.EmailConfirmationActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Konfirmasi Akun Edumail"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anda harus membuat akun EduMail"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <EditText
               android:id="@+id/edt_email"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="@string/hint_email"
               android:layout_weight="0.3"
               android:paddingTop="12dp"
               android:paddingBottom="12dp"
               android:paddingLeft="24dp"
               android:paddingRight="24dp"
               android:textColorHint="@android:color/darker_gray"
               android:drawableLeft="@drawable/ic_form_hijau_email"
               android:drawablePadding="@dimen/activity_vertical_margin"
               android:textSize="13sp"
               android:textColor="@android:color/darker_gray"
               android:layout_marginRight="@dimen/activity_horizontal_margin"
               android:background="@drawable/bg_rounded_border_grey"
               android:layout_marginBottom="@dimen/activity_vertical_margin"/>
           <TextView
               android:id="@+id/tv_edumail_domain"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="0.6"
               android:textColor="@color/colorBlack"
               android:text="atslack.co.id"/>
       </LinearLayout>
        <LinearLayout
            android:id="@+id/ln_email_suggestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_email_suggestion"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/tv_ask_for_other_email_option"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_ask_for_other_email"
                    android:minHeight="48dp"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"/>
            </LinearLayout>
            <ListView
                android:id="@+id/lv_email_suggestion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="@android:color/transparent"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_edumail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_rounded_background_teal"
        android:text="@string/label_buat_edumail"
        android:textColor="@color/colorWhite" />
</LinearLayout>
