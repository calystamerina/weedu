<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:padding="@dimen/activity_horizontal_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ln_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:layout_gravity="center"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:orientation="vertical">
            <ImageView
                android:background="@null"
                android:src="@drawable/ic_reply"
                android:tint="@color/textGray"
                android:layout_width="24dp"
                android:layout_gravity="center"
                android:layout_height="24dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:text="@string/btn_reply"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ln_reply_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:minHeight="48dp"
            android:minWidth="48dp">
            <ImageView
                android:background="@null"
                android:src="@drawable/ic_reply_all"
                android:tint="@color/textGray"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="24dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:text="@string/btn_reply_all"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ln_forward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:minHeight="48dp"
            android:minWidth="48dp">
            <ImageView
                android:background="@null"
                android:src="@drawable/ic_forward"
                android:tint="@color/textGray"
                android:layout_width="24dp"
                android:layout_gravity="center"
                android:layout_height="24dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:text="@string/btn_forward"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>