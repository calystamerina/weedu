<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_border_grey"
    android:layout_marginBottom="8dp">
    <ProgressBar
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/progressbar"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>
    <LinearLayout
        android:id="@+id/ln_attachment_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:padding="16dp"
        android:layout_toRightOf="@id/progressbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:id="@+id/tv_item_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="11sp"
                android:visibility="gone"
                android:textStyle="italic"/>
        </LinearLayout>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:tint="@color/colorPrimaryDark"
            android:id="@+id/btn_download"
            android:layout_gravity="center"
            android:src="@drawable/ic_get_app"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/amber600"
        android:layout_below="@id/ln_attachment_item"/>
</RelativeLayout>